<% include ./partials/header %>

<% var counter = 0 %>
<% if(patients.length > 0) { %> 
  <h5 class="display-5 text-center mt-3">List of patients</h5> 
  <table class="table table-striped table-hover mt-2">
    <thead>
      <tr>
          <th>#</th>
          <th>Patient Name</th>
          <th>Age</th>
          <th>Contact Number</th>
      </tr>
  </thead>
  <tbody>
    <% patients.forEach(patient => { %>
      <tr>
          <th><%= (counter+1) %></th>
          <td><a target="_blank" href="/patient/search/<%= patient._id %>" class="text primary"><%= patient.name %></a></td>
          <td><%= patient.age %></td>
          <td><%= patient.contact_number %></td>
      </tr>
      <% counter++ %>
    <% }) %>
  </tbody>
</table>

<% } else {%>
  <h4 class="display-1 text-center">No patient Listed</h4>
<% } %>


<% include ./partials/footer %>
